<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	.image_scroller {
		position: fixed;
		bottom: 60px;
		width: 100%;
	}
	
	.image_container {
		width: 100%;
		overflow-x: scroll;
	}
	</ui:style>
	<g:HTMLPanel styleName="{style.image_scroller} front"
		ui:field="container">
		<g:HTMLPanel styleName="{style.image_container} left"
			ui:field="imgContainer">
		</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder> 